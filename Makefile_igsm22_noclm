ALL: $(OBJECT) 
	$(CC) $(FFLAGS) $(OBJECT) -o igsm22.out $(LIBS)
#	  $(CC) $(FFLAGS) $(OBJECT) -o mod.out $(LIBS) $(LFLAGCC)


.F.o:
	 $(CC) -c $(FFLAGS) $<



